
<div class="row">
  <div class="col-xs-12"><br><h4><%= question.escape('title') %></h4><hr></div>
</div>

<div class="row">
  <div class="col-xs-1">
    <div class="questionVoteBox voteBox"></div>
  </div>

  <div class="col-xs-11">
    <div class="row text questionText">
      <div class="col-xs-12">
        <div id="answerBody"><%= question.get('body') %></div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-1"></div>
      <div class="col-xs-12">
        <p>asked by <a href="/#/users/<%= question.get('user_id') %>"><%= question.escape('username')%></a> <%= timeSince(question.escape('created_at')) %> ago</p>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-1"></div>
      <div class="col-xs-11">
        <ul id="questionCommentList" class="commentList"></ul>
        <div id="questionCommentForm" class="form"></div>
      </div>
    </div>
    <hr>
  </div>
</div>


<ul class="answerList"></ul>

<div id="answerForm" class="form"></div>