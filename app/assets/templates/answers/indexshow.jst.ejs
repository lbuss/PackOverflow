<div class="row">

  <div class="col-xs-2 noPad">
    <div class="row voteDisplay">
      <div class="col-xs-12">
        <div class="voteNumbers">
          <%= answer.escape('sum_votes') || 0 %>
        </div>
        <div class="voteText">
          votes
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-xs-10">  
  <h4><a href="/#/questions/<%= answer.get('question_id') %>" class="menuLink"><%= answer.escape('body') %></a></h4>

  <p>asked by <a href="/#/users/<%= answer.get('user_id') %>"><%= username %></a> <%= timeSince(answer.get('created_at')) %> ago</p>
  </div>

</div>